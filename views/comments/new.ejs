    <div class="container">
        <div class="row">
        <div class="col-md-1">
        </div>
        <div  class="col-md-10">
            <h1 style="text-align: center">Add New Comment to <%= recipe.name %></h1>
        </div>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/recipes/<%= recipe._id %>/comments" method="POST">
                    <div class="form-group">
                        <textarea class="form-control" type="text" name="comment[text]" placeholder="text" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/recipes">Go Back</a>
            </div>
        </div>
    </div>
