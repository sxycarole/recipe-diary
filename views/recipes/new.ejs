<% include ../partials/header %>

  <section id="actions" class="py-4 mb-4 bg-light">
    <div class="container">
      <div class="row">

      </div>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

  <section id="details">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-header">
              <h3>Create a New Recipe</h3>
            </div>

            <div class="card-body">
              <form action="/recipes" method="POST">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input type="text" name="name" id="name" class="form-control" placeholder="Clam chowder">
                </div>

                <div class="form-group">
                  <label for="image">Image Url</label>
                  <input class="form-control" type="text" name="image" id="image" placeholder="https://blablabla">
                </div>

                <div class="form-group">
                  <label for="cost">Cost</label>
                  <input class="form-control" type="number" name="cost" id="cost" placeholder="9.99" step="0.01" min="0">
                </div>

                <div class="form-group">
                  <label for="desc">Directions</label>
                  <input type="text" name="desc" id="desc">
                  <script>
                    var simplemde = new SimpleMDE({
                      placeholder: "Type here...",
                      element: document.getElementById("desc")
                    });
                    console.log(simplemde.value());
                    // document.getElementById('desc').innerHTML=marked(simplemde.value());
                  </script>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
              </form>
              <a href="/recipes">Go Back</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

