<% include ../partials/header %>

  <section id="actions" class="py-4 mb-4 bg-light">
    <div class="container">
      <div class="row">

      </div>
    </div>
  </section>

  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>

  <section id="details">
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="card">
            <div class="card-header">
              <h3>Edit <%= recipe.name %></h3>
            </div>
            <div class="card-body">
              <form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input type="text" name="name" id="name" class="form-control" value="<%= recipe.name %>" required>
                </div>

                <div class="form-group">
                  <label for="image">Image Url</label>
                  <input class="form-control" type="text" name="image" id="image" value="<%= recipe.image %>" required>
                </div>

                <div class="form-group">
                  <label for="cost">Cost</label>
                  <input class="form-control" type="number" name="cost" id="cost" value="<%= recipe.cost %>" step="0.01" min="0" required>
                </div>

                <div class="form-group">
                  <label for="description">Directions</label>
                  <input type="text" name="description" id="description">
                  <script>
                    var simplemde = new SimpleMDE({
                      initialValue: "<%= recipe.description %>",
                      element: document.getElementById("description")
                    });
                    console.log(simplemde.value());
                  </script>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
              </form>
              <a href="/recipes">Go Back</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% include ../partials/footer %>

